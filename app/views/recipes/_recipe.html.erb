<tr>
  <td><%= recipe.name %></td>
  <td><%= link_to 'Show', recipe %></td>
  <% if recipe.user == current_user %>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% else %>
    <td></td>
    <td></td>
  <% end %>
</tr>
