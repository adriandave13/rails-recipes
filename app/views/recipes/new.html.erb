<h1>Create a Recipe</h1>
<%= form_for @recipe do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :instructions %><br />
    <%= f.text_area :instructions, :rows => 4, :cols => 50 %>
  </p>
  <p>
    <%= f.submit :Submit, class: 'btn btn-primary' %>
  </p>
<% end %>
